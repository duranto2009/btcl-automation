<div class="row">
	<div class="col-md-12">
		<h4>Server Information</h4>
		<div class="portlet box"
			style="border: 1px solid #e6e9ec !important; padding: 15px !important;">
			<div class="row">
				<div class="col-md-7 primary-dns-name">
					<div class="form-group">
						<label class="control-label col-md-4">Primary DNS Server</label>
						<div class="col-md-8">
							<input type="text" class="form-control" placeholder=""
								name="primaryDNS">
						</div>
					</div>
				</div>
				<div class="col-md-5 hidden primary-dns-ip">
					<div class="form-group">
						<label class="control-label col-md-4">Primary IP</label>
						<div class="col-md-8">
							<input type="text" class="form-control" placeholder=""
								name="primaryDnsIP">
						</div>
					</div>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-md-7 secondary-dns-name">
					<div class="form-group">
						<label class="control-label col-md-4">Secondary DNS Server</label>
						<div class="col-md-8">
							<input type="text" class="form-control" placeholder=""
								name="secondaryDNS">
						</div>
					</div>
				</div>
				<div class="col-md-5 hidden secondary-dns-ip">
					<div class="form-group">
						<label class="control-label col-md-4">Secondary IP</label>
						<div class="col-md-8">
							<input type="text" class="form-control" placeholder=""
								name="secondaryDnsIP">
						</div>
					</div>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-md-7 tertiary-dns-name">
					<div class="form-group">
						<label class="control-label col-md-4">Tertiary DNS Server</label>
						<div class="col-md-8">
							<input type="text" class="form-control" placeholder=""
								name="tertiaryDNS">
						</div>
					</div>
				</div>
				<div class="col-md-5 hidden tertiary-dns-ip">
					<div class="form-group">
						<label class="control-label col-md-4">Tertiary IP</label>
						<div class="col-md-8">
							<input type="text" class="form-control" placeholder=""
								name="tertiaryDnsIP">
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>